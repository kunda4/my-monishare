{
  "name": "backend",
  "version": "0.0.1",
  "description": "The MoniShare backend.",
  "author": "Ojemba GmbH",
  "contributors": [
    {
      "name": "Raphael Pigulla",
      "email": "raphael.pigulla@maibornwolff.de"
    }
  ],
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build --path tsconfig.build.json",
    "format": "npm run format:prettier && npm run format:eslint",
    "format:eslint": "eslint --fix '{src,migrations,test}/**/*.ts'",
    "format:prettier": "prettier --write '{src,amigrations,test}/**/*.{ts,json}'",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "db:start": "docker run --rm --detach --publish=5432:5432 -e POSTGRES_PASSWORD=postgres -e POSTGRES_USER=postgres -e POSTGRES_DB=monishare --name monishare --mount type=bind,source=\"$(pwd)/fixture\",target=/fixture,readonly postgres:15-alpine",
    "db:migrate-up": "node-pg-migrate --config-file pgmigrate.config.json up",
    "db:load-fixture": "docker exec monishare /bin/bash -c \"find /fixture -type f | sort | xargs -I {} psql --username=postgres --dbname monishare -f {}\"",
    "db:stop": "docker rm -f monishare",
    "lint": "npm run lint:tsc && npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"{src,migrations,test}/**/*.ts\"",
    "lint:prettier": "prettier --check '{src,migrations,test}/**/*.{ts,json}'",
    "lint:tsc": "tsc --noEmit",
    "test": "npm run lint && npm run test:jest",
    "test:jest": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@nestjs/common": "^10.1.2",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.2",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/platform-express": "^10.1.2",
    "@nestjs/swagger": "^7.1.6",
    "boolean": "^3.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "class-validator-extended": "^3.1.1",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "node-pg-migrate": "^6.2.2",
    "pg-promise": "^11.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "ts-custom-error": "^3.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.10",
    "@nestjs/testing": "^10.1.2",
    "@testcontainers/postgresql": "^10.2.1",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.4.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "glob": "^10.3.3",
    "jest": "^29.6.2",
    "jest-extended": "^4.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "testcontainers": "^10.2.1",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "type-fest": "^4.0.0",
    "typescript": "^5.1.6"
  }
}
